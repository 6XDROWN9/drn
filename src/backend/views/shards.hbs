    <!-- Menu Toggle Script -->
    <script>
init();
let ws = new WebSocket('{{url}}');
let shardContainer = document.getElementById('shard-container');
let shards = {};
function refreshContainer() {
    shardContainer.childElementCount = 0;
    for (let i of Object.keys(shards).sort((a,b) => parseInt(a) - parseInt(b))) {
        shardContainer.appendChild(shards[i].element);
    }
}

function updateShard(s) {
    if (!shards[s.id]) {
        let el = document.createElement('div');
        el.id = `shard${s.id}`;
        shards[s.id] = {element: el};
        refreshContainer();
    }
    Object.assign(shards[s.id], s);

    s = shards[s.id];
    s.element.childElementCount = 0;
    let head = document.createElement('p');
    head.innerText = 'Shard ' + s.id;
    s.element.appendChild(head);
}

ws.onmessage = event => {
    let data = JSON.parse(event.data);
    switch (data.code) {
        case 'shard':
            updateShard(data.data);
            break;
    }
};
    </script>

