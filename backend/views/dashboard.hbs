<body class="blue-grey">
    {{> sidebar}}

    <a class="btn-floating btn-primary button-collapse btn-large waves-effects waves-light" data-activates="slide-out">
        <i class="large material-icons">menu</i></a>

    <header class="page-header">


        <h1 class="centre">dashboard</h1>
    </header>
    <main>
        <div class="section">
            <div class="row">
                <div class="col s12 m10 offset-m1">
                    <div class="card blue-grey darken-2">
                        {{#if user}}

                        <div id='workspace'>
                            {{> displayGuilds}}
                        </div>
                        <script>
                            var sid = '{{sessionId}}';
                            var wss = new WebSocket('{{url}}');
                            var workspace = document.getElementById('workspace')
                            var index = workspace.innerHTML;

                            wss.onmessage = function (event) {
                                let data = JSON.parse(event.data);
                                console.dir(data);
                                if (data.code == 200) {
                                    switch (data.data.type) {
                                        case 'displayGuild':

                                            workspace.innerHTML = `<p>${data.data.guild.name} Settings</p>`;
                                            workspace.innerHTML += `<ul class='collection blue-grey darken-3'>`
                                            for (var i = 0; i < Object.keys(data.data.guild.settings).length; i++) {
                                                let key = Object.keys(data.data.guild.settings)[i];
                                                workspace.innerHTML += `<li class='collection-item blue-grey darken-3'>${key} - ${data.data.guild.settings[key]}</li>`;
                                            }
                                            workspace.innerHTML += `</ul>`;
                                            break;
                                    }
                                }
                            }

                            function sendData(type, data) {
                                wss.send(JSON.stringify({ type, sid, data }));
                            }
                        </script>
{{else}}
<span class='card-content'>You need to be logged in to use this!</span> {{/if}}
