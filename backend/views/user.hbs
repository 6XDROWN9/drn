<style>
    .bot {
        border-radius: 4px;
        height: 18px;
        line-height: 18px;
        padding: 0 7px 0 6px;
        background-color: #738bd7;
    }
</style>

<body class="blue-grey">
    {{> sidebar}}

    <a class="btn-floating btn-primary button-collapse btn-large waves-effects waves-light" data-activates="slide-out">
        <i class="large material-icons">menu</i></a>

    <header class="page-header">
        <h1 class="centre">User</h1>
    </header>
    <main>
        <div class="section">
            <div class="row">
                <div class="col s12 m6 offset-m3 ">
                    <ul class='collection blue-grey darken-3' style='border: 0'>
                        <li class='collection-item avatar blue-grey darken-3'>
                            <img src="{{gotUser.avatarURL}}" class='circle'>
                            <span class='title'>{{username}}</span> {{#if gotUser.bot}}
                            <div class='chip bot white-text z-depth-1'>BOT</div>
                            {{/if}}
                            <span class='badge white-text text-lighten-1 time'>{{gotUser.createdAt}}</span>
                            <br><br>
                            <p>ID: {{gotUser.id}}</p>
                            <br>
                            <p>Nicknames:</p>
                            <ul class='collection blue-grey darken-3' style='border: 0'>
                                {{nicks}}
                            </ul>
                            <p>Shared Guilds: {{shared}}</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </main>
    <!-- Menu Toggle Script -->
    <script>
    init();
    function doStuff() {
            var first = true;
            var elements = document.getElementsByClassName('time');
            for (var i = 0; i < elements.length; i++) {
                var timestamp = elements.item(i).innerHTML;
                var newTimestamp = moment(parseInt(timestamp));
                elements.item(i).innerHTML = 'Created ' + newTimestamp.format('lll');
            }
        }
        doStuff();
</script>
    <footer class="page-footer blue-grey darken-2">
        <div class="section">
            <div class="rows">
                <div class="col s12 m10 offset-m1 l6 offset-l3">
                    <p class="centre">
                        &copy; 2016 - Ratismal (stupid cat)
                    </p>
                </div>
            </div>
        </div>
    </footer>

</body>

</html>